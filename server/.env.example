# Database Configuration
DB_TYPE=postgresql
# Options: postgresql, mysql

# PostgreSQL Configuration (when DB_TYPE=postgresql)
DATABASE_URL=postgresql://username:password@localhost:5432/service_management
# OR use individual variables:
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=yourpassword
DB_NAME=service_management

# MySQL Configuration (when DB_TYPE=mysql)
# DB_HOST=localhost
# DB_PORT=3306
# DB_USER=root
# DB_PASSWORD=yourpassword
# DB_NAME=service_management

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# Application Settings
NODE_ENV=development
PORT=5000